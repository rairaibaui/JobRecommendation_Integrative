# ===========================================
# AI CONFIGURATION SAMPLE
# ===========================================
# Copy these lines to your .env file and replace with your actual values

# -----------------------
# OpenAI API Configuration
# -----------------------
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# AI Model Selection
# Options: gpt-3.5-turbo (fast & cheap), gpt-4 (accurate & expensive)
OPENAI_MODEL=gpt-3.5-turbo

# Temperature: Controls randomness (0.0 = focused, 1.0 = creative)
OPENAI_TEMPERATURE=0.7

# Maximum tokens in AI response
OPENAI_MAX_TOKENS=1500

# -----------------------
# AI Features Configuration
# -----------------------
# How long to cache AI recommendations (in minutes)
# Higher = fewer API calls = lower cost
# Recommended: 60 (1 hour)
AI_CACHE_DURATION=60

# Enable/Disable AI Features
AI_JOB_MATCHING=true
AI_RESUME_ANALYSIS=true
AI_SKILL_SUGGESTIONS=true
AI_CAREER_INSIGHTS=true

# ===========================================
# TESTING CONFIGURATIONS
# ===========================================

# For Testing WITHOUT AI (uses basic skill matching - FREE):
# OPENAI_API_KEY=
# AI_JOB_MATCHING=false

# For Development (less caching, faster updates):
# AI_CACHE_DURATION=5

# For Production (more caching, lower costs):
# AI_CACHE_DURATION=120

# For Budget-Conscious Setup:
# OPENAI_MODEL=gpt-3.5-turbo
# AI_CACHE_DURATION=120
# OPENAI_TEMPERATURE=0.5

# For High-Quality Results (higher cost):
# OPENAI_MODEL=gpt-4
# AI_CACHE_DURATION=60
# OPENAI_TEMPERATURE=0.7

